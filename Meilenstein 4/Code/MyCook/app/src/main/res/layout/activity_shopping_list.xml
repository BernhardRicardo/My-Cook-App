<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_sopping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C808080"
    android:paddingTop="?attr/actionBarSize">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/b_shopping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav"

        />

    <TextView
        android:id="@+id/ShoppingHeader"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:contentDescription="Inventory"
        android:fontFamily="sans-serif-black"
        android:text="Shopping list"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text=" shopping list" />

    <ListView
        android:id="@+id/listviewShoppinglist"
        android:layout_width="228dp"
        android:layout_height="446dp"
        app:layout_constraintBottom_toTopOf="@+id/b_shopping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShoppingHeader"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonAddShoppinglist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/b_shopping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toEndOf="@+id/listviewShoppinglist"
        app:layout_constraintTop_toBottomOf="@+id/ShoppingHeader"
        app:layout_constraintVertical_bias="0.001" />

    <EditText
        android:id="@+id/eingabefeldShoppinglist"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="WarenName"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddShoppinglist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/listviewShoppinglist"
        app:layout_constraintTop_toBottomOf="@+id/ShoppingHeader"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>